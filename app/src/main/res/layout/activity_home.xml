<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".HomeActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/game_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="240dp"
        android:scaleType="centerCrop"
        android:src="@drawable/solution"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/btn_newLevel"
        android:layout_width="58dp"
        android:layout_height="57dp"
        android:background="@drawable/yellow_bacground_with_radius"
        android:foreground="@drawable/state_pressed_ripple"
        app:layout_constraintBottom_toBottomOf="@+id/game_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.912"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.111"
        app:srcCompat="@drawable/users" />

    <ImageButton
        android:id="@+id/btn_info"
        android:layout_width="58dp"
        android:layout_height="57dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/circle_bg"
        android:backgroundTint="@color/colorYellow"
        android:elevation="0dp"
        android:foreground="@drawable/state_pressed_ripple"
        app:layout_constraintEnd_toStartOf="@+id/btn_newLevel"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.111"
        app:srcCompat="@drawable/question" />

    <Button
        android:id="@+id/btn_gameStart"
        style="@style/CustomButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/game_controller"
        android:fontFamily="@font/permanentmarker_regular"
        android:gravity="center|center_horizontal|center_vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="@string/game_Start_Title"
        android:textAllCaps="false"
        android:textDirection="ltr"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.705" />


</androidx.constraintlayout.widget.ConstraintLayout>