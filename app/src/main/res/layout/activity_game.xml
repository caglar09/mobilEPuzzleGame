<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b1"
    android:orientation="vertical"
    android:paddingVertical="10sp"
    tools:context=".GameActivity">


    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_Orji"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="left|center_vertical"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="24dp"
            android:elevation="5dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_vertical|right"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="80dp"
            android:layout_toEndOf="@+id/img_Orji"
            android:fontFamily="@font/technique_bold_rgvoy"
            android:text="Hamle Sayisi"
            android:textAlignment="center"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/txt_stepCounter"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_vertical|right"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="53dp"
            android:layout_toEndOf="@+id/img_Orji"
            android:fontFamily="@font/technique_bold_rgvoy"
            android:text="0"
            android:textAlignment="center"
            android:textSize="16dp" />

        <ImageButton
            android:id="@+id/btn_Help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/circle_bg_32"
            android:backgroundTint="@android:color/white"
            android:contentDescription="@string/help_btn_content_description"
            app:srcCompat="@drawable/lightbulb_x" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout3">

        <TextView
            android:id="@+id/txt_stepName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical|right"
            android:fontFamily="@font/games"
            android:paddingVertical="5dp"
            android:text="1. adim"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="22dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/grd_BitmapListView"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_below="@+id/txt_stepName"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:elevation="1dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingHorizontal="10dp">

            <RelativeLayout
                android:id="@+id/relativeLayout5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_tr_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_vertical"
                    android:text="Türkçe:"
                    android:textSize="18dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txt_tr_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/txt_tr_name_label"
                    android:layout_alignBottom="@+id/txt_tr_name_label"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="120dp"
                    android:layout_toEndOf="@+id/txt_tr_name_label"
                    android:gravity="center_vertical"
                    android:text="null"
                    android:textSize="16dp" />

                <ImageButton
                    android:id="@+id/img_speachTextTr"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignTop="@+id/txt_tr_name"
                    android:layout_alignBottom="@+id/txt_tr_name"
                    android:layout_marginVertical="9dp"
                    android:layout_marginStart="-120dp"
                    android:layout_toEndOf="@+id/txt_tr_name"
                    android:background="@drawable/circle_bg"
                    android:backgroundTint="@color/colorBlue"
                    android:foreground="@drawable/state_pressed_ripple"
                    app:srcCompat="@drawable/ic_volume_up_white_24dp" />

                <ImageButton
                    android:id="@+id/img_recognizeTextTr"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignTop="@+id/txt_tr_name"
                    android:layout_alignBottom="@+id/txt_tr_name"
                    android:layout_marginVertical="9dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/img_speachTextTr"
                    android:background="@drawable/circle_bg"
                    android:foreground="@drawable/state_pressed_ripple"
                    app:srcCompat="@drawable/ic_mic_black_24dp" />

                <ImageButton
                    android:id="@+id/img_checkTextSpeechTr"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignTop="@+id/img_recognizeTextTr"
                    android:layout_alignBottom="@+id/img_recognizeTextTr"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_toEndOf="@+id/img_recognizeTextTr"
                    android:background="@drawable/circle_bg"
                    android:backgroundTint="@android:color/white"
                    app:srcCompat="@drawable/ic_check_gray_24dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout5">

                <TextView
                    android:id="@+id/txt_en_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_vertical"
                    android:text="İnglizce:"
                    android:textSize="18dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txt_en_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/txt_en_name_label"
                    android:layout_alignBottom="@+id/txt_en_name_label"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="120dp"
                    android:layout_toEndOf="@+id/txt_en_name_label"
                    android:gravity="center_vertical"
                    android:text="null"
                    android:textSize="16dp" />

                <ImageButton
                    android:id="@+id/img_speachTextEn"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignTop="@+id/txt_en_name"
                    android:layout_alignBottom="@+id/txt_en_name"
                    android:layout_marginVertical="9dp"
                    android:layout_marginStart="-120dp"
                    android:layout_toEndOf="@+id/txt_en_name"
                    android:background="@drawable/circle_bg"
                    android:backgroundTint="@color/colorBlue"
                    android:foreground="@drawable/state_pressed_ripple"
                    app:srcCompat="@drawable/ic_volume_up_white_24dp" />

                <ImageButton
                    android:id="@+id/img_recognizeTextEn"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignTop="@+id/txt_en_name"
                    android:layout_alignBottom="@+id/txt_en_name"
                    android:layout_marginVertical="9dp"
                    android:layout_marginStart="10dp"

                    android:layout_toEndOf="@+id/img_speachTextEn"
                    android:background="@drawable/circle_bg"
                    android:foreground="@drawable/state_pressed_ripple"
                    app:srcCompat="@drawable/ic_mic_black_24dp" />

                <ImageButton
                    android:id="@+id/img_checkTextSpeechEn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignTop="@+id/img_recognizeTextEn"
                    android:layout_alignParentBottom="false"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_toEndOf="@+id/img_recognizeTextEn"
                    android:background="@drawable/circle_bg"
                    android:backgroundTint="@android:color/white"
                    app:srcCompat="@drawable/ic_check_gray_24dp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
